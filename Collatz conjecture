number_string = input("Type your number for the 3x+1 problem: ")
number_integer = int(number_string)
counter = 0

while number_integer != 1:
    if number_integer % 2 == 0:
        number_integer = number_integer // 2
        print(number_integer)
    else:
        number_integer = 3 * number_integer + 1
        print(number_integer)
    counter += 1

print("Number of steps taken:", counter)
